{
	"name": "la-margarita-backend",
	"version": "1.0.0",
	"description": "Backend del proyecto LaMargarita (Node.js + Express + MongoDB + JWT)",
	"type": "module",
	"scripts": {
		"dev": "cross-env NODE_ENV=development nodemon src/app.js",
		"start": "cross-env NODE_ENV=production node src/app.js",
		"test": "cross-env NODE_ENV=test vitest run",
		"test:watch": "cross-env NODE_ENV=test vitest",
		"test:coverage": "cross-env NODE_ENV=test vitest run --coverage",
		"coverage": "cross-env NODE_ENV=test c8 vitest run",
		"seed:admin:test": "cross-env NODE_ENV=test node scripts/seed-test-admin.mjs",
		"check:admin:test": "cross-env NODE_ENV=test node scripts/check-test-admin.mjs",
		"fix:admin:test": "cross-env NODE_ENV=test node scripts/fix-test-admin.mjs",
		"show:config:test": "cross-env NODE_ENV=test node scripts/show-config.mjs",
		"test:func": "npm run fix:admin:test && cross-env NODE_ENV=test vitest -c vitest.functional.config.js run",
		"test:func:one": "npm run fix:admin:test && cross-env NODE_ENV=test vitest -c vitest.functional.config.js run tests/functional/auth/login.functional.test.js",
		"test:func:watch": "npm run fix:admin:test && cross-env NODE_ENV=test vitest -c vitest.functional.config.js",
		"show-config": "node scripts/show-config.mjs"
	},
	"keywords": [
		"backend",
		"express",
		"nodejs",
		"mongo",
		"lamargarita",
		"jwt"
	],
	"author": "Maxi Sastre Bocalon",
	"license": "ISC",
	"dependencies": {
		"bcrypt": "^6.0.0",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"dayjs": "^1.11.13",
		"dotenv": "^16.5.0",
		"dotenv-flow": "^4.1.0",
		"express": "^4.21.2",
		"express-mongo-sanitize": "^2.2.0",
		"express-rate-limit": "^7.5.1",
		"express-validator": "^7.2.1",
		"helmet": "^8.1.0",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.16.0",
		"passport": "^0.7.0",
		"passport-jwt": "^4.0.1",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^5.0.1",
		"uuid": "^11.1.0",
		"winston": "^3.17.0",
		"xss-clean": "^0.1.4",
		"zod": "^3.25.67"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.2",
		"c8": "^10.1.3",
		"cross-env": "^7.0.3",
		"nodemon": "^3.1.10",
		"supertest": "^7.1.1",
		"vitest": "^3.2.4"
	}
}
